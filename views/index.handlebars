<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1 class="text-center mb-3">{{title}}</h1>
        <form action="/api/members" method="post" class="mb-4">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="text" name="age" class="form-control">
            </div>

            <input type="submit" value="Add User" class="btn btn-primary btn-block">
        </form>

    <ul class="list-group">
        {{#each members}}
            <li class="list-group-item">
                Id    : {{this.id}} <br>
                Name  : {{this.name}} <br>
                Email : {{this.email}} <br>
                Age   : {{this.age}}</li>

        {{/each}}
    </ul>

    <a href="/api/members" class="btn btn-info mt-3 mb-3">Let Me See Api</a>
</body>

    <style>
        .list-group-item{
            -webkit-box-shadow: -2px 2px 15px 0px rgba(0,0,0,0.59);
            -moz-box-shadow: -2px 2px 15px 0px rgba(0,0,0,0.59);
            box-shadow: -2px 2px 15px 0px rgba(0,0,0,0.59);
            border: none;
            margin-bottom: 20px;
            border-left: 3px solid #007bff;
        }
    </style>
</html>
